# Felix Conversational Orchestrator - Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED SECRETS - Generate with: openssl rand -hex 32
# =============================================================================

# Application secret key (REQUIRED)
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32

# Admin API authentication token (REQUIRED)
ADMIN_API_TOKEN=your_admin_token_here_generate_with_openssl_rand_hex_32

# OpenAI API key (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# Database password (REQUIRED)
DB_PASSWORD=your_secure_database_password_here

# =============================================================================
# OPTIONAL - Defaults provided
# =============================================================================

# Database configuration
DB_USER=postgres
DB_NAME=felix_orchestrator

# Application settings
DEBUG=false
APP_NAME=Felix Orchestrator

# CORS - comma-separated allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# LLM Configuration
DEFAULT_MODEL=gpt-5.2
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=1024

# =============================================================================
# QUICK START
# =============================================================================
#
# 1. Copy this file to .env:
#    cp .env.example .env
#
# 2. Generate secrets:
#    SECRET_KEY=$(openssl rand -hex 32)
#    ADMIN_API_TOKEN=$(openssl rand -hex 32)
#
# 3. Set your OpenAI API key and database password
#
# 4. Start the application:
#    docker-compose up -d
#
# =============================================================================
