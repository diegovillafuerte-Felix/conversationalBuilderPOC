{
  "id": "billpay",
  "name": "Bill Pay Agent",
  "description": "I'm the Felix bill payment specialist. I can help you with:\n- Paying services like CFE (electricity), Telmex, Izzi, etc.\n- Viewing your saved services\n- Checking the amount due for a service\n- Viewing your payment history\n\nPayments are applied in 24-48 hours.",
  "model_config": {
    "model": "gpt-5.2",
    "temperature": 0.5,
    "maxTokens": 1024
  },
  "navigation": {
    "canGoUp": true,
    "canGoHome": true,
    "canEscalate": true
  },
  "parent_agent": "felix",
  "context_requirements": [
    {"type": "product_summary", "productFilter": "billPay"}
  ],
  "tools": [
    {
      "name": "get_billers",
      "description": "Gets the list of available services to pay.",
      "parameters": [
        {
          "name": "category",
          "type": "string",
          "required": false,
          "description": "Category (utilities, telecom). If not specified, shows all."
        }
      ],
      "side_effects": "read",
      "requires_confirmation": false
    },
    {
      "name": "get_saved_billers",
      "description": "Gets the user's saved services.",
      "parameters": [],
      "side_effects": "read",
      "requires_confirmation": false
    },
    {
      "name": "get_bill_details",
      "description": "Checks the amount due for a service.",
      "parameters": [
        {
          "name": "biller_id",
          "type": "string",
          "required": true,
          "description": "Service ID (cfe, telmex, etc.)"
        },
        {
          "name": "account_number",
          "type": "string",
          "required": true,
          "description": "Account or service number"
        }
      ],
      "side_effects": "read",
      "requires_confirmation": false
    },
    {
      "name": "pay_bill",
      "description": "Pays a service.",
      "parameters": [
        {
          "name": "biller_id",
          "type": "string",
          "required": true,
          "description": "Service ID"
        },
        {
          "name": "account_number",
          "type": "string",
          "required": true,
          "description": "Account number"
        },
        {
          "name": "amount",
          "type": "number",
          "required": true,
          "description": "Amount to pay in MXN"
        }
      ],
      "requires_confirmation": true,
      "confirmation_template": "Confirm paying ${amount} MXN to the service?",
      "side_effects": "financial"
    }
  ]
}
